<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.UTSAplikasiInfoPariwisata" parent="Theme.Material3.DayNight">
        <!-- Tema utama: untuk DetailActivity -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorSecondary">@color/white_bg</item>
        <item name="android:windowBackground">@color/white_bg</item>

        <!-- Tema Action Bar -->
        <item name="actionBarStyle">@style/App.Actionbar.Style</item>
    </style>

    <!-- Style untuk Action Bar -->
    <style name="App.Actionbar.Style" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/blue_primary</item>
        <item name="android:titleTextStyle">@style/App.Actionbar.TitleTextStyle</item>
        <item name="colorControlNormal">@color/warna_header</item>
    </style>

    <!-- Style untuk judul Action Bar -->
    <style name="App.Actionbar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/warna_header</item>
    </style>

    <!-- Tema khusus MainActivity tanpa Action Bar -->
    <style name="Theme.UTSAplikasiInfoPariwisata.NoActionBar">
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
